  <div id= "sidebar">
    <%= image_tag "HackerRankLogo", id: "logo" %>
    <div class=icons>
    <i class="fa fa-list-alt" style="font-size:20px;color:white; margin-bottom: 25px"></i>
    <i class="fa fa-clock-o" style="font-size:20px;color:white;margin-bottom: 25px"></i>
    <i class="fa fa-trophy" style="font-size:20px;color:white;margin-bottom: 25px"></i>
    <i class="fa fa-th-list" style="font-size:20px;color:white;margin-bottom: 25px"></i>
    <i class="fa fa-comments" style="font-size:20px;color:white;margin-bottom: 25px"></i>
  </div>

  </div>

<div class= "container">

  <div class= "header">
    <input type="text" name="search" placeholder= "search">
    <%= image_tag "HackerRankTopCorner", id: "topcorner" %>
  </div>


  <div class= "topbar">

    <div class="top-container">
      <div class="top-left-container">
      <h1 id= "Algorithms"> Algorithms </h1>
      <p> 11 categories</p>
      <p> 274 challenges</p>
      </div>

      <div class="top-right-container">
      <p> Rating <br id= "rating"> O(logN) </p>
      <p > Rank <br> 153 </p>
      <p> Score <br> 2733.34 </p>
      </div>
    </div>

    <div class="bottom-container">
      <div class="bottom-left-container">
      <p>All Challenges</p>
      <p>Tutorials</p>
      <p>Leaderboard</p>
      <p>Contests</p>
      <p>Network</p>
      </div>
      <div class= "bottom-right-container">
      <p > Change Track </p>
      </div>
    </div>

    </div>

